{
  "manifest_version": 3,
  "name": "Fokusflöde AI",
  "version": "1.0",
  "description": "Ett AI-drivet tillägg för att bibehålla fokus på en specifik uppgift.",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.wasm",
        "offscreen.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}